<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Pool - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")

</head>
<body ng-app="carpoolApp" ng-controller="mainController">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Car Pool", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"  ng-if="authentication.isAuth">
                    <li>@Html.ActionLink("My Cars", "Index", "MyCars")</li>
                    <li>@Html.ActionLink("My Posts", "Index", "MyPosts")</li>                    
                </ul>
                <ul ng-if="!authentication.isAuth" class="nav navbar-nav navbar-right">
                    <li ><a ng-click="login()">Login</a></li>                    
                </ul>
                <ul ng-if="authentication.isAuth" class="nav navbar-nav navbar-right">
                    <li ><a href="#">Hi, {{authentication.userName}} !</a></li>
                    <li><a ng-click="logOut()">Log Out</a></li>
                </ul>
                
            </div>
        </div>
    </div>

    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Car Pool</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>